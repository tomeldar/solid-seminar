{
  "name": "solid-seminar",
  "version": "1.0.0",
  "description": "SOLID Principles Crash Course Seminar workspace",
  "license": "ISC",
  "type": "module",
  "engines": {
    "node": ">=22 <23"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:contract": "vitest run tests/contract",
    "test:integration": "vitest run tests/integration",
    "test:unit": "vitest run tests/unit",
    "test:module": "node scripts/run-module-tests.cjs $MODULE",
    "start:final": "ts-node-dev --respawn --transpile-only final-integration/src/main.ts",
    "coverage": "vitest run --coverage"
  },
  "keywords": [],
  "author": "",
  "packageManager": "pnpm@10.6.3",
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/core": "^11.1.6",
    "@nestjs/testing": "^11.1.6",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^17.2.2",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@types/node": "^24.3.3",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "vitest": "^3.2.4"
  }
}